export function getLang(currentPageUrl: string): string {

  let lang = 'en';

  if (currentPageUrl.startsWith("/ru/")) {
    lang = 'ru';
  } else if (currentPageUrl.startsWith("/ua/")) {
    lang = 'ua';
  } else if (currentPageUrl.startsWith("/cn/")) {
    lang = 'cn';
  }
  return lang;
}
