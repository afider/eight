---
import { Sprite } from 'astro-icon';

---
<div class="status">

  <div class="wallet">
    <Sprite name="mark" class="wallet__icon" />
    <div class="wallet__title" data-retro-wallet-name></div>
    <div class="wallet__close" data-retro-wallet-close>
      <Sprite name="close" class="wallet__close-icon" />
    </div>
  </div>

  <div class="info-panel">
    <div class="info-panel__label">Status</div>
    <div class="info-panel__rate rate">
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
      <Sprite name="star" class="rate__icon" />
    </div>
    <div class="info-panel__level"></div>
  </div>

  <div class="info-panel">
    <div class="info-panel__label">Snapshot balance</div>
    <div class="info-panel__value" data-retro-donated></div>
  </div>
</div>
