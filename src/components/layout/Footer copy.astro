---
import { Sprite } from 'astro-icon';
import { getLang } from '@utils/GetLang.astro';

const currentPageUrl = Astro.url.pathname;
---
<footer class="layout__footer footer">
  <div class="footer__body">
    <div class="footer__logo">

    </div>
    <div class="footer__lang">

    </div>
  </div>
  <div class="footer__copy">
    Created by 8Club Community
  </div>

    {
      (getLang(currentPageUrl) === 'en') && 
      (
      <div class="footer__copy">
        <span class="footer__author">Created by 🎱 Club.</span> <a href="https://t.me/community_bot/club" class="link link--nav">Join us, fren</a> 🚀
      </div>
      )
    }
  
    {
      (getLang(currentPageUrl) === 'ru') && 
      (
      <div class="footer__copy">
        <span class="footer__author">Создано 🎱 Club.</span> <a href="https://t.me/community_bot/club" class="link link--nav">Присоединяйся к нам, друг</a> 🚀
      </div>
      )
    }

    {
      (getLang(currentPageUrl) === 'ua') && 
      (
      <div class="footer__copy">
        <span class="footer__author">Створено 🎱 Club.</span> <a href="https://t.me/community_bot/club" class="link link--nav">Приєднуйся до нас, друже</a> 🚀
      </div>
      )
    }

    {
      (getLang(currentPageUrl) === 'cn') && 
      (
      <div class="footer__copy">
        <span class="footer__author">由 🎱 俱乐部创建。</span> <a href="https://t.me/community_bot/club" class="link link--nav">加入我们吧，朋友</a> 🚀
      </div>
      )
    }
</footer>
<Sprite.Provider />
