---
import { Sprite } from 'astro-icon';
import { getLang } from '@utils/GetLang.astro';

const currentPageUrl = Astro.url.pathname;
---
<footer class="layout__footer footer">

    {
      (getLang(currentPageUrl) === 'en') && 
      (
      <div class="footer__copy">
        <span class="footer__author">Created by 🎱 Club.</span> <a href="https://t.me/community_bot/club" class="link link--nav">Join us, fren</a> 🚀
      </div>
      )
    }
  
    {
      (getLang(currentPageUrl) === 'ru') && 
      (
      <div class="footer__copy">
        <span class="footer__author">Создано 🎱 Club.</span> <a href="https://t.me/community_bot/club" class="link link--nav">Присоединяйся к нам, друг</a> 🚀
      </div>
      )
    }

    {
      (getLang(currentPageUrl) === 'ua') && 
      (
      <div class="footer__copy">
        <span class="footer__author">Створено 🎱 Club.</span> <a href="https://t.me/community_bot/club" class="link link--nav">Приєднуйся до нас, друже</a> 🚀
      </div>
      )
    }

    {
      (getLang(currentPageUrl) === 'cn') && 
      (
      <div class="footer__copy">
        <span class="footer__author">由 🎱 俱乐部创建</span> <a href="https://t.me/community_bot/club" class="link link--nav">俱乐部创建。加入我们吧，朋友</a> 🚀
      </div>
      )
    }

  <div class="footer__socials socials">
    <ul class="socials__list">
      <li class="socials__item">
        <a href="https://fragment.com/numbers" class="socials__link link link--nav" title="Anonymous numbers on fragment.com">
          <Sprite name="fragment" width="22" height="22" class="socials__icon" />
          +888
        </a>
      </li>
      <li class="socials__item">
        <a href="https://t.me/anon_club" class="socials__link link link--nav" title="Telegram Channel">
          <Sprite name="telegram" width="22" height="22" class="socials__icon" />
        </a>
      </li>
      <li class="socials__item">
        <a href="https://x.com/anonclub8" class="socials__link link link--nav" title="Read us on X (ex Twitter)">
          <Sprite name="x" width="22" height="22" class="socials__icon" />
        </a>
      </li>
    </ul>
  </div>
</footer>
<Sprite.Provider />
