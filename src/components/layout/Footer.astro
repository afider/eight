---
import LangSwitcher from '@components/LangSwitcher.astro';
import { getLang } from '@utils/GetLang.astro';
import Logo from '@components/Logo.astro';

const currentPageUrl = Astro.url.pathname;
---
<footer class="layout__footer footer">
  <div class="footer__body">
    <div class="footer__logo">
      <Logo classNames={'logo--footer'} />
    </div>
    <div class="footer__lang">
      <LangSwitcher classNames={'lang--drop-top'} />
    </div>
  </div>
  <div class="footer__copy">
    {
      (getLang(currentPageUrl) === 'en') && 
      (
      <div class="footer__copy">
        Created by <a href="https://t.me/community_bot/club" class="link link--nav link--second">🎱Club Community</a>.
      </div>
      )
    }
  
    {
      (getLang(currentPageUrl) === 'ru') && 
      (
      <div class="footer__copy">
        Создано <a href="https://t.me/community_bot/club" class="link link--nav link--second">🎱Club Community</a>.
      </div>
      )
    }

    {
      (getLang(currentPageUrl) === 'ua') && 
      (
      <div class="footer__copy">
        Створено <a href="https://t.me/community_bot/club" class="link link--nav link--second">🎱Club Community</a>.
      </div>
      )
    }

    {
      (getLang(currentPageUrl) === 'cn') && 
      (
      <div class="footer__copy">
        由 <a href="https://t.me/community_bot/club" class="link link--nav link--second">🎱俱乐部创建。</a>
      </div>
      )
    }
  </div>
</footer>

